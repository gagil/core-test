<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	 <sql-query name="findPersona">
        <![CDATA[
		SELECT *
		FROM PERSONA    
        ]]>
     </sql-query>
	 <sql-query name="findPersonasPorNombre">
        <![CDATA[
		SELECT *
		FROM PERSONA
		WHERE NOMBRE=?    
        ]]>
     </sql-query>     
</hibernate-mapping>